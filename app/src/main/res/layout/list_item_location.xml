<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#ECECEC"
      android:padding="@dimen/view_padding_8"
      android:paddingLeft="@dimen/view_padding_16"
      android:paddingRight="@dimen/view_padding_16"
      android:text="定位城市"
      />

  <TextView
      android:id="@+id/ui_city_picker_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/view_padding_16"
      android:layout_marginLeft="@dimen/view_padding_8"
      android:layout_marginStart="@dimen/view_padding_8"
      android:layout_marginTop="@dimen/view_padding_16"
      android:background="@drawable/shape_city_select_textview"
      android:padding="@dimen/view_padding_8"
      android:text="正在定位..."
      android:textColor="?attr/colorPrimary"
      />

</LinearLayout>