<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_foreground"
    android:orientation="vertical"
    >
  <RelativeLayout
      android:id="@+id/rl_edtxt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="#ffffff"
      >

    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="@dimen/view_margin_16"
        android:layout_marginRight="@dimen/view_margin_16"
        >

      <EditText
          android:id="@+id/et_old_username"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/iv_username"
          android:background="#00000000"
          android:hint="原密码"
          android:inputType="number"
          android:singleLine="true"
          android:textColor="#565656"
          android:textSize="18sp"
          />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dip"
        android:layout_below="@id/rl_username"
        android:background="#bdbdbd"
        />

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/rl_username"
        android:layout_marginLeft="@dimen/view_margin_16"
        android:layout_marginRight="@dimen/view_margin_16"
        >

      <EditText
          android:id="@+id/et_new_password"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/iv_password"
          android:background="#00000000"
          android:hint="新密码"
          android:inputType="textPassword"
          android:singleLine="true"
          android:textColor="#565656"
          android:textSize="18sp"
          />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dip"
        android:layout_below="@id/rl_password"
        android:background="#bdbdbd"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/rl_password"
        android:layout_marginLeft="@dimen/view_margin_16"
        android:layout_marginRight="@dimen/view_margin_16"
        >

      <EditText
          android:id="@+id/et_affirm_password"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/iv_password"
          android:background="#00000000"
          android:hint="确认密码"
          android:inputType="textPassword"
          android:singleLine="true"
          android:textColor="#565656"
          android:textSize="18sp"
          />
    </RelativeLayout>
  </RelativeLayout>

  <support.ui.components.SupportButton
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/btn_modification_login"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:gravity="center"
      android:text="修改密码"
      android:textColor="@android:color/white"
      android:textSize="@dimen/text_size_18"
      app:supportButtonCornerRadius="24dp"
      />

</LinearLayout>