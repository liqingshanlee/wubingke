<?xml version="1.0" encoding="utf-8"?>
<com.smartydroid.android.starter.kit.widget.ForegroundRelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:fresco="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/view_margin_8"
		android:foreground="?attr/selectableItemBackground"
>
	<com.facebook.drawee.view.SimpleDraweeView
			android:id="@+id/info_comment_header"
			android:layout_width="@dimen/simple_info"
			android:layout_height="@dimen/simple_info"
			android:layout_gravity="center_vertical"
			fresco:placeholderImage="@mipmap/ic_information"
			fresco:placeholderImageScaleType="centerCrop"
			fresco:roundAsCircle="true"
			tools:ignore="RtlHardcoded"
	/>

	<TextView
			android:id="@+id/info_detail_username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/view_margin_8"
			android:layout_marginTop="@dimen/view_margin_4"
			android:layout_toRightOf="@+id/info_comment_header"
			android:textColor="@color/colorPrimary"/>

	<TextView
			android:id="@+id/info_comment_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/info_detail_username"
			android:layout_marginLeft="@dimen/view_margin_8"
			android:layout_marginTop="@dimen/view_margin_4"
			android:layout_toRightOf="@+id/info_comment_header"
			android:textSize="@dimen/text_size_14"/>

	<TextView
			android:id="@+id/info_comment_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/info_comment_time"
			android:layout_marginLeft="@dimen/view_margin_8"
			android:layout_marginTop="@dimen/view_margin_4"
			android:layout_toRightOf="@+id/info_comment_header"
			android:textColor="@color/black"
			android:textSize="@dimen/text_size_16"/>


</com.smartydroid.android.starter.kit.widget.ForegroundRelativeLayout>