<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/support_ui_content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    >
  <FrameLayout
      android:id="@+id/im_ui_content_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/im_ui_swf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <android.support.v7.widget.RecyclerView
          android:id="@+id/im_ui_recycler_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scrollbars="none"
          />
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:id="@+id/im_ui_view_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginRight="24dp"
        android:background="@drawable/im_view_bubble"
        android:gravity="center"
        android:textColor="#FFffffff"
        android:textSize="48sp"
        android:visibility="invisible"
        tools:text="A"
        />
    <tech.honc.android.apps.soldier.feature.im.widget.SideBar
        android:id="@+id/im_ui_sidebar"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        />

  </FrameLayout>

</FrameLayout>