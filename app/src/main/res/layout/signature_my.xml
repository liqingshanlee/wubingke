<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_foreground"
    android:orientation="vertical"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <Button
            android:id="@+id/btn_affirm"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/view_margin_8"
            android:layout_marginTop="@dimen/view_margin_8"
            android:layout_marginBottom="@dimen/view_margin_8"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/signature_text"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:gravity="left|top"
        android:hint="世界因我而伟大，我因世界而伟大"
        android:padding="@dimen/view_margin_20"
        android:paddingLeft="@dimen/view_margin_8"
        android:paddingTop="@dimen/view_margin_8"
        android:textSize="@dimen/text_size_18"
        />
</LinearLayout>