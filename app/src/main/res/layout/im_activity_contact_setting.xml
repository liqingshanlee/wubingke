<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliwx_common_bg_white_color"
    android:orientation="vertical"
    >
  <android.support.v7.widget.Toolbar
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/colorPrimary"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
      />
  <RelativeLayout
      android:id="@+id/contact_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimary"
      android:padding="20dp"
      >

    <com.alibaba.mobileim.fundamental.widget.WXNetworkImageView
        android:id="@+id/head"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_information_big"
        />

    <TextView
        android:id="@+id/contact_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="测试"
        android:textColor="@color/aliwx_white"
        android:textSize="@dimen/aliwx_font_first_grade"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="@dimen/aliwx_column_top_margin"
      android:background="@color/more_line_color"
      />

  <RelativeLayout
      android:id="@+id/receive_msg_remind_layout"
      android:layout_width="match_parent"
      android:layout_height="@dimen/setting_item_height"
      android:background="@color/white"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:text="是否提醒"
        style="@style/more_item_style"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/receive_msg_remind_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/more_line_color"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_marginTop="@dimen/aliwx_column_top_margin"
      android:background="@color/more_line_color"
      />

  <RelativeLayout
      android:id="@+id/clear_msg_record"
      android:layout_width="match_parent"
      android:layout_height="@dimen/setting_item_height"
      android:background="@color/white"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:text="清空聊天记录"
        style="@style/more_item_style"
        />

  </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:background="@color/more_line_color"
      />

</LinearLayout>
