<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/spinner"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="@dimen/view_margin_8"
      android:layout_marginRight="@dimen/view_margin_30"
      android:layout_marginTop="@dimen/view_margin_8"
      android:gravity="center_horizontal"
      android:minHeight="@dimen/filter_min_height"
      android:orientation="horizontal"
      >
    <TextView
        android:id="@+id/filter_soldier_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableRight="@mipmap/ic_filter_spinner"
        android:gravity="center"
        tools:ignore="RtlHardcoded"
        />

    <TextView
        android:id="@+id/filter_soldier_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableRight="@mipmap/ic_filter_spinner"
        android:gravity="center"
        tools:ignore="RtlHardcoded"
        />

    <TextView
        android:id="@+id/filter_soldier_age"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableRight="@mipmap/ic_filter_spinner"
        android:gravity="center"
        tools:ignore="RtlHardcoded"
        />
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorTextview"
      />

</LinearLayout>