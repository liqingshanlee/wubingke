<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/image_feed_thumbnail"
      android:layout_width="@dimen/photo_thumbnail_size"
      android:layout_height="@dimen/photo_thumbnail_size"
      fresco:placeholderImage="@mipmap/ic_default_feed"
      fresco:placeholderImageScaleType="centerCrop"
      />

  <TextView
      android:id="@+id/text_frame"
      android:layout_width="@dimen/photo_thumbnail_size"
      android:layout_height="@dimen/photo_thumbnail_size"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="@string/photo_show_more"
      android:textSize="@dimen/text_size_22"
      android:visibility="gone"
      />
</FrameLayout>