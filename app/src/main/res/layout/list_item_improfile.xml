<?xml version="1.0" encoding="utf-8"?>
<com.smartydroid.android.starter.kit.widget.ForegroundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/view_margin_8"
    android:foreground="?attr/selectableItemBackground"
    >

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/improfile_avatar"
      android:layout_width="@dimen/photo_thumbnail_size"
      android:layout_height="@dimen/photo_thumbnail_size"
      android:layout_alignParentLeft="true"
      fresco:placeholderImage="@mipmap/ic_default_feed"
      fresco:placeholderImageScaleType="centerCrop"
      fresco:roundAsCircle="true"
      />

  <TextView
      android:id="@+id/improfile_nick_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/view_margin_8"
      android:layout_marginTop="@dimen/view_margin_16"
      android:layout_toRightOf="@+id/improfile_avatar"
      android:textStyle="bold"
      android:textSize="@dimen/text_size_16"
      />


  <TextView
      android:id="@+id/improfile_phone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/improfile_nick_name"
      android:layout_marginLeft="@dimen/view_margin_8"
      android:layout_marginTop="@dimen/view_margin_8"
      android:layout_toRightOf="@+id/improfile_avatar"
      />

  <TextView
      android:id="@+id/im_friend"
      android:padding="@dimen/view_margin_8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:textColor="@color/white"
      />


</com.smartydroid.android.starter.kit.widget.ForegroundRelativeLayout>